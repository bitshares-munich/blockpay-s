<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="3"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/whiteColor"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:orientation="horizontal"
        android:layout_weight="0.5">
            <ImageView
                android:id="@+id/ivCoin1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:src="@drawable/bts"/>
            <ImageView
                android:id="@+id/ivCoin2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:padding="10dp"
                android:visibility="invisible"
                android:src="@drawable/bts"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tvCoin1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/smart_coins"
            android:textSize="20sp"
            android:layout_weight="0.5"/>
        <TextView
            android:id="@+id/tvCoin2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="20sp"
            android:layout_weight="0.5"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:layout_weight="0.8">
        <ImageView
            android:id="@+id/ivCoin3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:padding="5dp"
            android:visibility="invisible"
            android:src="@drawable/bts"/>
        <ImageView
            android:id="@+id/ivCoin4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dp"
            android:visibility="gone"
            android:layout_weight="0.3"
            android:src="@drawable/bts"/>
        <ImageView
            android:id="@+id/ivCoin5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:padding="5dp"
            android:visibility="gone"
            android:src="@drawable/bts"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvCoin3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="20sp"
            android:layout_weight="0.3"/>

        <TextView
            android:id="@+id/tvCoin4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="20sp"
            android:visibility="gone"
            android:layout_weight="0.3"/>
        <TextView
            android:id="@+id/tvCoin5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="20sp"
            android:visibility="gone"
            android:layout_weight="0.3"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_weight="0.8">
        <ImageView
            android:id="@+id/ivCoin6"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:padding="5dp"
            android:visibility="gone"
            android:src="@drawable/bts"/>
        <ImageView
            android:id="@+id/ivCoin7"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:padding="5dp"
            android:visibility="gone"
            android:src="@drawable/bts"/>
        <ImageView
            android:id="@+id/ivCoin8"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:padding="5dp"
            android:visibility="gone"
            android:src="@drawable/bts"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvCoin6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="20sp"
            android:visibility="gone"
            android:layout_weight="0.3"/>

        <TextView
            android:id="@+id/tvCoin7"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="20sp"
            android:visibility="gone"
            android:layout_weight="0.3"/>
        <TextView
            android:id="@+id/tvCoin8"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="20sp"
            android:visibility="gone"
            android:layout_weight="0.3"/>

    </LinearLayout>
</LinearLayout>
